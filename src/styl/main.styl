@import url('https://fonts.googleapis.com/css2?family=Montserrat:wght@300;400;500;600;700;800&display=swap');

$global = 'Montserrat', sans-serif
$carousel-height = 450px
$control-size = 50px

body
    font-family $global
    font-size 18px

h1, h2, h3
    font-family $global

.bg-navbar
    background-color white

.timer
    color #A2238D
    font-size 1.1rem
    font-weight 700
    text-transform uppercase

.Header
    background-color #1F1438
    background-image linear-gradient(rgba(0,0,0,0.5),rgba(0,0,0,0.5)), url('../../dist/images/header.png');
    background-repeat no-repeat
    background-size cover
    background-position left center
    color white
    height 70vh
    & .display-4
        font-size $global
        font-weight 800
    & .lead
        text-transform uppercase
        font-size 1.4rem
        font-weight 400

.btn-green
    background-color #ACC32B
    border solid 1px white
    color white
    font-weight 500
    &:hover
        background-color #b5d117
        border solid 1px white
        color white
    &:focus
        box-shadow none

.btn-purple
    background-color #EF5DFF
    border solid 1px white
    color white
    font-weight 500
    &:hover
        background-color #db6fe7
        border solid 1px white
        color white
    &:focus
        box-shadow none

.Ejes
    & h2
        font-weight 700
    & .Eje-contenido
        & .Eje-text
            font-size 1rem
            font-weight 400
        & .Eje-ico
            color #A987DB

.Presentacion
    & .Presentacion-text
        font-size 1.4rem
        text-align justify

.Participacion
    background-color #33ADB5
    color white
    & .Participacion-text
        font-weight 600
        font-size 1.3rem
        text-transform uppercase

.LogosUniversidades
    & h2
        font-weight 700
    & .Link-uni
        text-decoration none
    & p
        font-weight 500

.Conferencistas
    & h2
        font-weight 700
    & .Conferecista-container
        & .Conferencista-titulo
            font-size 1.2rem
            font-weight 700
        & .Conferencista-contenido
            font-size 1rem
            font-weight 400
        & .Conferencista-redes i
            color #FB554C
            font-size 1.8rem
    & .link-social
        text-decoration none

.Programa
    & h2
        font-weight 700
    background-color #f2f2f2
    & .Programa-card
        border-radius .6rem
        color white
        & .Programa-lugar
            font-size 1.1rem
            font-weight 500
        & .Programa-hora
            font-size 1.3rem
            font-weight 600
        & .Programa-tema
            font-size 1.4rem
            font-weight 400
            line-height 1.5rem

.card-bg-1
    background-color #EF5DFF

.card-bg-2
    background-color #33ADB5

.card-bg-3
    background-color #FB554C

.card-bg-4
    background-color #FF9B16

.Evento
    background-color #33ADB5
    & h2
        color white
        font-weight 700
    & .Evento-card
        & .Evento-titulo
            color white
            font-size 1.2rem
            font-weight 500
            text-transform uppercase
        & .Evento-texto
            color white
            font-size 1rem
            font-weight 400
            text-transform uppercase

.Organiza
    & h3
        font-size 1.2rem
        font-weight 700
        text-transform uppercase

.Link-aliado
    text-decoration none

.Contacto
    background-color #A2238D
    color white
    & h2
        color #FFCE29
        font-weight 700
    & .Contacto-text
        font-size 1.4rem

.Copyright
    background-color black
    color white
    font-size .9rem

.carousel
    width auto
    height $carousel-height
    border-radius 3px
    overflow hidden
    position relative
    box-shadow 0 3px 6px rgba(0, 0, 0, 0.2)
    &:hover .controls
        opacity 1

.controls
    opacity 0
    display flex
    position absolute
    top 50%
    left 0
    justify-content space-between
    width 100%
    z-index 99999
    transition all ease 0.5s

.control
    margin 0 5px
    display flex
    align-items center
    justify-content center
    height 40px
    width 40px
    border-radius 50%
    background-color rgba(255, 255, 255, 0.7)
    opacity .5
    transition ease .3s
    cursor pointer
    &:hover
        opacity 1

.slides
    position absolute
    top 50%
    left 0
    transform: translateY(-50%)
    display flex
    width 100%
    transition 1s ease-in-out all
      
.slide
    min-width 100%
    min-height $carousel-height
    height auto

